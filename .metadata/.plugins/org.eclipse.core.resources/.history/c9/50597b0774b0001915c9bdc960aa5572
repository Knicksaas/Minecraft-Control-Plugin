package com.nte.mc.controlplugin.spawnprotection;

import org.bukkit.Bukkit;
import org.bukkit.Location;
import org.bukkit.World;
import org.bukkit.block.Block;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerMoveEvent;

import com.nte.mc.controlplugin.main.Main;

public class SpwanprotectionEventlistener implements Listener{
	
	Main main = new Main();
	World world = Bukkit.getServer().getWorld("world");
	private Block b1 = Bukkit.getServer().getWorld("world").getBlockAt(new Location(world, main.config.getDouble("Spawnprotection.Block1.x"), main.config.getDouble("Spawnprotection.Block1.y"), main.config.getDouble("Spawnprotection.Block1.z")));
	
	@EventHandler
	public void playerMoveEvent(PlayerMoveEvent e) {
		Player p = e.getPlayer();
		p.sendMessage("You moved");
	}
}
